<section class="orders-show">


  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary jumbotron">
    
    
    <div class="panel panel-default products">

    <table class="table table-bordered order-table">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Price</th>
          <th>Qty</th>
        </tr>
      </thead>
      <tbody>
        <%  @order.line_items.each do |item| %>
        <tr>
          <td>
            <img src="<%= item.product.image %>" alt="Tiny furniture3" style='max-width: 100%'>
          </td>
          <td>
            <h4><%= item.product.name %></h4>
            <br>
            <p><%= item.product.description %></p>
          </td>
          <td>
            <%= humanized_money_with_symbol number_with_precision((item.total_price_cents / 100.0), :precision => 2) %>
          </td>
          <td>
            <%= item.quantity %>
          </td>
        </tr>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="2">
            TOTAL:
          </th>
          <th colspan="2">
            <%= humanized_money_with_symbol number_with_precision((@order.total_cents / 100.0), :precision => 2) %>
          </th>
        </tr>
      </tfoot>
    </table>

    </div>
      

    
    <h4>Thank you for your order!</h4>
    <h4>A confirmation email will be sent to <%=  @order.email %></h4>
  </div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
